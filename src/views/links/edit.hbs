<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{link.value}}" class="form-control" name="title" placeholder="Título" autofocus>
                        </div>
                        <div class="form-group mt-2">
                            <input type="url" value="{{link.url}}" class="form-control" name="url" placeholder="Dirección URL">
                        </div>
                        <div class="form-group mt-4">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripción"></textarea>
                        </div>
                        <div class="form-group mt-3">
                            <button class="btn btn-success w-100">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>